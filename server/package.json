{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "chat-app-backend",
  "main": "start.js",
  "scripts": {
    "db-create": "sequelize db:create",
    "db-create:test": "NODE_ENV=test sequelize db:create",
    "db-drop": "sequelize db:drop",
    "db-drop:test": "NODE_ENV=test sequelize db:drop",
    "db-migrate": "./node_modules/.bin/sequelize db:migrate",
    "db-migrate:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate",
    "db-migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "db-migrate:undo:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate:undo:all",
    "db-seed:undo:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:seed:undo:all",
    "db-refresh": "npm run db-migrate:undo && npm run db-migrate && npm run db-seed",
    "db-refresh:test": "NODE_ENV=test npm run db-seed:undo:test && npm run db-migrate:undo:test && npm run db-migrate:test && npm run db-seed:test",
    "db-seed": "./node_modules/.bin/sequelize db:seed:all",
    "db-seed:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:seed:all",
    "start": "npm run prod",
    "server": "node ./src/api/start.js",
    "server:prod": "node ./src/api/start.js",
    "dev": "cross-env NODE_ENV=development npm-run-all server",
    "prod": "NODE_ENV=production npm-run-all server:prod",
    "watch": "nodemon",
    "test": "NODE_ENV=test npm run db-refresh:test && jest --testTimeout=20000",
    "lint-fix": "eslint ./src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abidex4yemi/chat-app.git"
  },
  "author": "Sulaiman Abidemi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abidex4yemi/chat-app/issues"
  },
  "homepage": "https://github.com/abidex4yemi/chat-app#readme",
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "nodemailer-sendgrid": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "pg": "^7.13.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.2",
    "supertest": "^4.0.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1",
    "sequelize-cli": "^5.5.1"
  }
}
