{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "server": "node ./src/start.js",
    "server:prod": "node ./src/start.js",
    "dev": "cross-env NODE_ENV=development npm-run-all server",
    "prod": "NODE_ENV=production npm-run-all server:prod",
    "watch": "nodemon",
    "lint-fix": "eslint ./src --fix",
    "commit:lint": "npx commitlint --from HEAD~1 --to HEAD --verbose"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^2.0.1"
  }
}
